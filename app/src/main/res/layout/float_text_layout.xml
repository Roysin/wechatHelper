<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/float_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_alpha_dark">
        <TextView
            android:id="@+id/start_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/back_to_reading"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <Button
            android:id="@+id/close"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/close_btn_width"
            android:layout_height="@dimen/close_btn_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/close_btn"/>
    </RelativeLayout>
</FrameLayout>